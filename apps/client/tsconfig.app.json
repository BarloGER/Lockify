{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@global-frameworks/*": ["./global/frameworks/*"],
      "@global-ui/*": ["./global/frameworks/react/ui/*"],
      "@global-services/*": ["./global/services/*"],

      "@user-management-entities/*": ["./features/user-management/entities/*"],
      "@user-management-ui/*": [
        "./features/user-management/frameworks/react/ui/*"
      ],
      "@user-management-interface-adapters/*": [
        "./features/user-management/interface-adapters/*"
      ],
      "@user-management-use-cases/*": [
        "./features/user-management/use-cases/*"
      ],

      "@landing-ui/*": ["./features/landing/frameworks/react/ui/*"],
      "@landing-interface-adapters/*": [
        "./features/landing/interface-adapters/*"
      ]
    }
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
}
